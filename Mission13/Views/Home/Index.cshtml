@{
    ViewData["Title"] = "Home Page";
}
@model List<Bowler>

<h1>Bowler Contact List</h1>
<h3>@ViewBag.Header</h3>

<table class="table table-sm table-striped table-bordered table-dark table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Middle Init.</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BowlerFirstName</td>
                <td>@b.BowlerMiddleInit</td>
                <td>@b.BowlerLastName</td>
                <td>@b.BowlerAddress</td>
                <td>@b.BowlerCity</td>
                <td>@b.BowlerState</td>
                <td>@b.BowlerZip</td>
                <td>@b.BowlerPhoneNumber</td>
                
                <td><a class="btn btn-warning" asp-controller="Home" asp-action="Edit" asp-route-id="@b.BowlerID">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@b.BowlerID">Delete</a></td>
            </tr>
         }
    </tbody>
</table>